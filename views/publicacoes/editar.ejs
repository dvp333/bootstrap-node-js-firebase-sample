<%- include('../header') %>

<form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
    <div class="form-group">
        <label for="inputTitulo">Título</label>
        <input name="titulo" type="text" class="form-control" id="inputTitulo" aria-describedby="publicacaoHelp" placeholder="Digite o título da publicação" value="<%= publicacao.titulo %>">
    </div>
    <div class="form-group">
            <label for="inputConteudo">Publicação</label>
            <textarea name="conteudo" class="form-control" id="inputConteudo" aria-describedby="publicacaoHelp" placeholder="Digite o conteúdo da publicacao"><%= publicacao.conteudo %></textarea>
        </div>
    <button class="btn btn-success">Salvar</button>
</form>

<%- include('../footer') %>