<%- include('../header') %>

<form method="POST" action="/publicacoes/nova">
    <div class="form-group">
        <label for="inputTitulo">Título</label>
        <input name="titulo" type="text" class="form-control" id="inputTitulo" aria-describedby="publicacaoHelp" placeholder="Digite o título da publicação">
    </div>
    <div class="form-group">
        <label for="inputCategoria">Categoria</label>
        <select name="categoria" value class="form-control" id="inputCategoria">
            <% categorias.forEach( categoria => { %>
                <option value="<%= categoria.id %>"><%= categoria.categoria %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group">
            <label for="inputConteudo">Publicação</label>
            <textarea name="conteudo" class="form-control" id="inputConteudo" aria-describedby="publicacaoHelp" placeholder="Digite o conteúdo da publicacao"></textarea>
        </div>
    <button class="btn btn-success">Salvar</button>
</form>

<%- include('../footer') %>