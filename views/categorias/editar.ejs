<%- include('../header') %>

<form method="POST" action="/categorias/editar/<%= categoria.id %>">
    <div class="form-group">
        <label for="inputCategoria">Categoria</label>
        <input name="categoria" value="<%= categoria.categoria %>" type="text" class="form-control" id="inputCategoria" aria-describedby="categoriaHelp" placeholder="Insira onome da categoria">
        <small id="categoriaHelp" class="form-text text-muted">Nome da categoria.</small>
    </div>
    <button class="btn btn-success">Salvar</button>
</form>

